! URXVT APPEARANCE

Xft.dpi: 109
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull

#define user_font bitstream vera sans mono

! URxvt.font: xft:user__font:style=Regular:size=8:antialias=true
! URxvt.boldFont: xft:user_font:style=Bold:size=8:antialias=true
! URxvt.italicFont: xft:user_font:style=Italic:size=8:antialias=true
! URxvt.boldItalicfont: xft:user_font:style=Bold Italic:size=8:antialias=true

! URxvt*font:                 xft:DejaVu Sans Mono for Powerline:regular:size=8
! URxvt*imFont:               xft:DejaVu Sans Mono for Powerline:regular:size=8
! URxvt*boldFont:             xft:DejaVu Sans Mono for Powerline:bold:size=8
! URxvt*italicFont:           xft:DejaVu Sans Mono for Powerline:italic:size=8
! URxvt*boldItalicFont:       xft:DejaVu Sans Mono for Powerline:bold:italic:size=8

! URxvt.font:xft:Monaco:size=8:antialias=true
URxvt.font:xft:GohuFont:size=11:antialias=false

URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 12
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false


! COMMON KEYBINDS
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D


! COPY PASTE AND OTHER EXTENSIONS
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped


